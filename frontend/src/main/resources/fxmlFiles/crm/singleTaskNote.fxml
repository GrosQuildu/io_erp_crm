<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="main.java.erp_crm.frontend.tasks.SingleTaskNoteController"
      spacing="10"
      maxWidth="Infinity"
      fx:id="mainBox">

    <padding>
        <Insets top="10" left="10" right="10" bottom="10"/> </padding>
    <HBox spacing="10" >
        <Button fx:id="deleteBtn" text="Delete"/>
        <Button fx:id="saveBtn" text="Save"/>
    </HBox>
    <TextArea fx:id="contentArea" VBox.vgrow="ALWAYS" minWidth="50" maxWidth="Infinity"/>
</VBox>
